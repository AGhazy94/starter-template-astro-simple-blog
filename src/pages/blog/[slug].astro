---
import DefaultSpacer from "../../components/DefaultSpacer.astro";
import FullText from "../../components/fulltext/FullText.astro";
import Layout from "../../layouts/Layout.astro";
import { EPageType, getProps } from "../../services/content/getProps";

const { slug } = Astro.params;
const props = await getProps({slug, pageType: EPageType.Blog});


if (props.is404) return Astro.redirect("/404");
---
<Layout seo={props?.BlogArticle?.seo} navigation={props.Navigation} footer={props.Footer} >
  { props.BlogArticle?.text && <FullText text={props.BlogArticle.text} />}
  <DefaultSpacer/>
</Layout>