---
import type { IGenHeadline } from "../../services/graphql/__generated/sdk";
import CenterContainer from "./CenterContainer.astro";

export interface Props extends IGenHeadline {}

const { headline, subheadline } = Astro.props;
---

<CenterContainer>
  <div
    class="flex flex-col justify-start items-center gap-2.5"
  >
    {
      headline && (
        <h1 class="text-4xl font-bold text-left text-slate-900">
          {headline}
        </h1>
      )
    }
    {
      subheadline && (
        <h4 class="mt-2 text-xl text-center text-gray-400">
          {subheadline}
        </h4>
      )
    }
  </div>
</CenterContainer>
